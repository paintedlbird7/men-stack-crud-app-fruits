<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fruits Index</title>
  </head>
  <body>
    <h1>All Fruits</h1>
    <nav><ul><li><a href="/fruits">Browse Fruits</a></li>
        <li><a href="/fruits/new">Add New Fruit</a></li></ul></nav>


    <ul>
        <% fruits.forEach(fruit => { %>
            </li><a href="/fruits/<%= fruit._id %>"> <%= fruit.name %> </a></li>
            <% }); %>
      </ul>

  </body>
</html>
